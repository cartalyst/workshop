{
    "name": "{{lower_vendor}}/{{lower_name}}",
    "type": "platform-extension",
    "description": "{{description}}",
    "authors": [
        {
            "name": "{{author}}",
            "email": "{{email}}"
        }
    ],
    "repositories": [
        { "type": "composer", "url": "https://packages.cartalyst.com" }
    ],
    "require": {
        "php": "^8.1",
        "cartalyst/composer-installers": "^2.0",
        "cartalyst/support": "^7.0",
        "platform/foundation": "^12.0"
    },
    "autoload": {
        "classmap": [
            {{classmap_autoloads}}
        ],
        "psr-4": {
            "{{studly_vendor}}\\{{studly_name}}\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
