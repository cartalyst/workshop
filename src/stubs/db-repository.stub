		${{lower_model}} = $this->find($id);

		${{lower_model}}->fill($data)->save();

		$this->dispatcher->fire('{{lower_vendor}}.{{lower_model}}.updated', ${{lower_model}});

		return ${{lower_model}};
	}

	/**
