		{
			$this->dispatcher->fire('{{lower_vendor}}.{{lower_model}}.deleted', ${{lower_model}});

			${{lower_model}}->delete();

			return true;
		}

		return false;
	}

	/**
	 * {@inheritDoc}
	 */
